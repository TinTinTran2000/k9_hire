      <form class="form" style="text-align:right; margin-right:10px;">
        <input type="search" id="query" name="q" placeholder="Search dogs via city.."
        aria-label="Search through site content">
        <%= link_to "Search", dogs_path, class: "btn btn-gradient"%>
      </form>
